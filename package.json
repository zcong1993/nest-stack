    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^16.4.3",
    "@types/supertest": "^2.0.11",
    "jest": "^29.0.0",
    "lerna": "^6.0.0",
    "prettier": "^2.3.2",
    "rxjs": "^7.2.0",
    "supertest": "^6.1.4",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^4.0.0",
    "tslint": "^6.1.3",
