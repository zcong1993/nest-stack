{
  "name": "nest-stack",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "format": "prettier '**/*.{ts,json,md}' --ignore-path ./.prettierignore --write && git status",
    "lint": "tslint -p tsconfig.json -c tslint.json \"packages/**/*.ts\"",
    "build": "npm run clean && lerna run tsc",
    "clean": "rm -rf packages/*/dist",
    "test": "npm run lint && lerna run test --scope=@zcong/nest-stack-prometheus --scope=@zcong/nest-stack-config",
    "test:cov": "npm run lint && npm run build && lerna run test:cov --scope=@zcong/nest-stack-prometheus --scope=@zcong/nest-stack-config"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.3",
    "@nestjs/common": "^7.5.4",
    "@nestjs/core": "^7.5.4",
    "@nestjs/platform-express": "^7.5.4",
    "@nestjs/schematics": "^7.2.2",
    "@nestjs/testing": "^7.5.4",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.8",
    "@types/supertest": "^2.0.10",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^2.1.2",
    "rxjs": "^6.6.3",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "workspaces": [
    "packages/*"
  ]
}
