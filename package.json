{
  "name": "nest-stack",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "format": "prettier '**/*.{ts,json,md}' --ignore-path ./.prettierignore --write && git status",
    "lint": "tslint -p tsconfig.json -c tslint.json \"packages/**/*.ts\"",
    "build": "npm run clean && lerna run tsc",
    "clean": "rm -rf packages/*/dist",
    "publish": "npm run build && lerna publish",
    "test": "npm run lint && lerna run test --scope=@zcong/nest-stack-prometheus --scope=@zcong/nest-stack-config",
    "test:cov": "npm run lint && npm run build && lerna run test:cov --scope=@zcong/nest-stack-prometheus --scope=@zcong/nest-stack-config"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/common": "^6.10.1",
    "@nestjs/core": "^6.11.8",
    "@nestjs/platform-express": "^6.11.8",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.11.8",
    "@types/express": "^4.17.1",
    "@types/jest": "^25.0.0",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "jest": "^25.0.0",
    "lerna": "^3.19.0",
    "prettier": "^1.18.2",
    "rxjs": "^6.5.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.0.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
